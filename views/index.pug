extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 My Portfolio

      p.lead.text-light
        | Hi, my name is Matthew. I'm a full stack web developer in the making! This is my portfolio where I can show off a few of the applications/projects I have built.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each val, index in project
        .cell
          a(href=`/project/${index}`)
            img.thumbnail(src=`${project[index].image_urls[0]}`)
            h5 #{project[index].project_name}
      
